<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>tomcat-directory</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <!-- Custom files - Default files -->
    <fileSet>
      <directory>src/main/tomcat</directory>
      <outputDirectory></outputDirectory>
      <excludes>
        <exclude>**/*.sh</exclude>
      </excludes>
    </fileSet>
    <!-- Custom files - Executable files-->
    <fileSet>
      <directory>src/main/tomcat</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
  </fileSets>
  <!-- TAKE CARE TO EXCLUDE EVERYTHING YOU WANT TO REDEFINE LOCALLY -->
  <dependencySets>
    <!-- Tomcat Bundle -->
    <dependencySet>
      <includes>
        <include>org.exoplatform.platform:exo.platform.packaging.assembly:zip:tomcat</include>
      </includes>
      <outputDirectory></outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <useDefaultExcludes>true</useDefaultExcludes>
        <excludes>
          <!--exclude>bin/gatein.bat</exclude-->
          <exclude>bin/gatein.sh</exclude>
          <!--exclude>bin/gatein-dev.bat</exclude>
          <exclude>bin/gatein-dev.sh</exclude>
          <exclude>bin/setenv.sh</exclude-->
          <!-- Remove some config before replace-->
          <!--exclude>conf/context.xml</exclude-->
		  
          <!-- <exclude>conf/jmxremote.access</exclude>
          <exclude>conf/jmxremote.password</exclude> -->
		  
          <!--exclude>conf/management.properties</exclude-->
          <exclude>conf/server.xml</exclude>
          
          <exclude>gatein/conf/configuration.properties</exclude>
          <!-- No ACME Demo -->
	  <exclude>conf/Catalina/localhost/acme-website.xml</exclude>
          <exclude>webapps/acme-website*.war</exclude>
          <exclude>lib/exo.platform.sample.acme-website.config*.jar</exclude>
          <!-- No Office Demo -->
          <exclude>webapps/office-portal*.war</exclude>
          <exclude>lib/exo.platform.office.config*.jar</exclude>
          <exclude>conf/Catalina/localhost/office-portal.xml</exclude>
          <!-- Index will be replaced -->
          <exclude>webapps/ROOT/index.jsp</exclude>
          <!--exclude>webapps/crash*.war</exclude-->
          <!-- No default website -->	
          <exclude>conf/Catalina/localhost/default-website.xml</exclude>
          <exclude>lib/exo.platform.sample.default-website.config*.jar</exclude>
          <exclude>webapps/default-website.war</exclude>
	  <!-- Use patched social librairies for SOC-1776-->
	  <exclude>lib/exo.social.component.common-1.1.6-SNAPSHOT.jar</exclude>
	  <exclude>lib/exo.social.component.core-1.1.6-SNAPSHOT.jar</exclude>
	  <exclude>lib/exo.social.component.webui-1.1.6-SNAPSHOT.jar</exclude>
	  <exclude>webapps/social-extension.war</exclude>
	  <!-- Change timeout session -->
	  <exclude>conf/web.xml</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- Additional libs -->
    <dependencySet>
      <includes>
        <include>mysql:mysql-connector-java:jar</include>
        <include>org.apache.tomcat:tomcat-catalina-jmx-remote:jar</include>
        <include>br.unb.coopere:portlet-coopere-config:jar</include>
      </includes>
      <outputDirectory>/lib</outputDirectory>
    </dependencySet>

    <!-- Additional webapps -->
    <dependencySet>
      <includes>
       <include>br.unb.coopere:portlet-coopere-webapp:war</include>
      </includes>
      <outputDirectory>/webapps</outputDirectory>
      <outputFileNameMapping>portlet-coopere-office-extension.war</outputFileNameMapping>
    </dependencySet>
  </dependencySets></assembly>
